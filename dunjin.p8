pico-8 cartridge // http://www.pico-8.com
version 33
__lua__
h=24 w=24 sqs=5
mode=1
function _update()
	if mode==1 then
		if (btnp(5)) mode=2
	end
end

function _draw()
	cls(0)
 if mode==1 then
 	print("dunjin battles",36,30)
 	print("press x to start",33,80)
 elseif mode==2 then
		for x=0,h-1 do
			for y=0,w-1 do
		 	x1=x*sqs x2=x*sqs+sqs
		 	y1=y*sqs y2=y*sqs+sqs
		 	rectfill(x1,y1,x2,y2,15)
				rect(x1,y1,x2,y2,5)
			end		
		end
	end
end
